<% if user_signed_in? %>
  <li><%= 'User: ' + current_user.email %></li>
  <li><%= link_to('Edit account', edit_user_registration_path, :class => 'btn btn-inverse') %></li>
  <li><%= link_to('Logout', destroy_user_session_path, :class => 'btn btn-inverse') %></li>
<% else %>
  <li><%= link_to('Login', new_user_session_path, :class => 'btn btn-inverse')  %></li>
  <li><%= link_to('Sign up', new_user_registration_path, :class => 'btn btn-inverse')  %></li>
<% end %>